<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ClassicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cl_color_primary</item>
        <item name="colorPrimaryDark">@color/cl_color_primary_dark</item>
        <item name="colorAccent">@color/cl_color_primary</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">@color/cl_secondary_text_color</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="colorPrimary">@color/n_color_primary</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="colorPrimaryDark">@color/n_color_primary_dark</item>
        <item name="colorAccent">@color/n_color_primary</item>
        <item name="android:textColorSecondary">@color/n_secondary_text_color</item>
    </style>

    <style name="NotFoundStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/min_text_size</item>
        <item name="android:paddingStart">@dimen/min_text_size</item>
        <item name="android:paddingEnd">@dimen/min_text_size</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>