<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topic_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin">

        <TextView
            android:id="@+id/ticket_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:fontFamily="@font/calibri"
            android:text="#9999"
            android:textColor="@color/chuck_status_error"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/title_ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingStart="@dimen/small_margin"
            android:fontFamily="@font/calibri"
            android:text="kompyuterim "
            android:textColor="@color/chuck_status_error"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/status_ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:fontFamily="@font/calibri"
            android:layout_marginStart="@dimen/default_margin"
            android:text="O'qilmagan"
            android:textColor="@color/chuck_status_error"
            android:textSize="@dimen/small_text_size" />

        <androidx.cardview.widget.CardView
            android:id="@+id/un_read_ticket_count_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:cardCornerRadius="@dimen/small_margin">

            <TextView
                android:id="@+id/un_read_ticket_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:singleLine="true"
                android:text="44"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_text_color" />

</LinearLayout>
