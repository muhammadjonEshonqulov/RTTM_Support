<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_chat"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/action_bar_chat"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/cl_color_primary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/novaround"
            android:gravity="center|start"
            android:text="RTTM SUPPORT"
            android:textColor="@color/white"
            android:textSize="@dimen/very_large_text_size" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/close_and_rating"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/action_bar_chat"
        android:background="#FF9F88">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/left_right_margin_size"
            android:src="@drawable/close_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/novaround"
            android:text="Bildirishnomani yakunlash"
            android:textColor="@color/white"
            android:textSize="@dimen/very_large_text_size" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/left_right_margin_size"
            android:src="@drawable/close_icon"
            android:visibility="gone" />


    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/action_bar_answer_lay"
        android:layout_below="@id/close_and_rating"
        android:visibility="visible"
        tools:listitem="@layout/item_chat" />

    <ProgressBar
        android:id="@+id/char_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/action_bar_answer_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/action_bar_answer_btn"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#FF9F88">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/left_right_margin_size"
                android:src="@drawable/answear_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/novaround"
                android:text="Javob yozish"
                android:textColor="@color/white"
                android:textSize="@dimen/very_large_text_size" />

            <ImageView
                android:id="@+id/add_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/left_right_margin_size"
                android:src="@drawable/ic_baseline_add_circle_24" />


        </FrameLayout>

        <LinearLayout
            android:id="@+id/answer_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/left_right_margin_size"
                android:layout_marginTop="@dimen/left_right_margin_size"
                android:fontFamily="@font/calibri"
                android:text="Matn kiriting"
                android:textColor="@color/black"
                android:textSize="@dimen/min_text_size" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/left_right_margin_size">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/left_right_margin_size"
                        android:layout_marginEnd="@dimen/left_right_margin_size"
                        app:cardBackgroundColor="#f9f9f9"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="@dimen/left_right_margin_size">

                        <EditText
                            android:id="@+id/chat_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f9f9f9"
                            android:fontFamily="@font/calibri"
                            android:gravity="top"
                            android:textColor="@color/black"
                            android:textColorHint="@color/default_text_color"
                            android:hint="Bildirishnoma mazmuni"
                            android:maxHeight="250dp"
                            android:minHeight="200dp"
                            android:padding="@dimen/default_margin"
                            android:textSize="@dimen/standard_text_size" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/left_right_margin_size"
                        android:layout_marginTop="@dimen/left_right_margin_size"
                        android:fontFamily="@font/calibri"
                        android:text="Fayl biriktiring"
                        android:textColor="@color/black"
                        android:textSize="@dimen/min_text_size" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/left_right_margin_size"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/left_right_margin_size"
                        app:cardElevation="@dimen/left_right_margin_size">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/image_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/calibri"
                                android:gravity="center|start"
                                android:paddingStart="@dimen/left_right_margin_size"
                                android:text="Fayl nomi"
                                android:textColor="@color/black"
                                android:textSize="@dimen/min_text_size" />

                            <ImageView
                                android:id="@+id/upload_image"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="#5c5c5c"
                                android:paddingTop="@dimen/small_margin"
                                android:paddingBottom="@dimen/small_margin"
                                android:src="@drawable/upload_file" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="#59c114"
                                android:paddingTop="@dimen/small_margin"
                                android:paddingBottom="@dimen/small_margin"
                                android:src="@drawable/add_file"
                                android:visibility="gone" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/left_right_margin_size"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/calibri"
                        android:text="Fayllar .jpg, jpeg, .png"
                        android:textColor="@color/black"
                        android:textSize="@dimen/min_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/left_right_margin_size"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/left_right_margin_size"
                            app:cardBackgroundColor="#ff0024"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="@dimen/left_right_margin_size"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/cancel_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/default_margin">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:cardCornerRadius="100dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="#ff0024"
                                        android:src="@drawable/close_icon" />
                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:text="BEKOR QILISH"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_text_size" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/left_right_margin_size"
                            app:cardBackgroundColor="#38800c"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="@dimen/left_right_margin_size"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/send_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/default_margin">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/send_chat_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/default_margin"
                                    android:text="YUBORISH"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_text_size" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>