<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/feedback_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/left_right_margin_size">

        <TextView
            android:id="@+id/give_rate_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:text="Sizga xizmat ko'rsatganlikni baxolang" />

        <LinearLayout
            android:id="@+id/stars_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/give_rate_tittle"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_star_rated" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_star" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/feedback_text_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextInputLayoutStyle"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/stars_lay"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/feedback_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:hint="O'z fikringizni qoldiring"
                android:textColorHint="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedback_text_lay"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:padding="8dp"
                android:text="Bekor qilish"
                android:textColor="@color/cl_color_primary"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:padding="8dp"
                android:text="Yuborish"
                android:textColor="@color/cl_color_primary"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>