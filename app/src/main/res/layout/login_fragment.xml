<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/very_large_text_size"
            android:orientation="vertical"
            android:padding="@dimen/left_right_margin_size">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/actionbar_size"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/logo_background_circle"
                    android:src="@drawable/logo_rttm" />

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/login_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="@dimen/left_right_margin_size"
                android:background="@drawable/back_edittext"
                android:drawableEnd="@drawable/ic_baseline_person_24"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="10dp"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/logo"
                tools:layout_editor_absoluteX="26dp" />

            <FrameLayout
                android:id="@+id/password_auth_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_edittext"
                    android:fontFamily="@font/ibm_plex_sans_medium"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/password_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_eyeslash" />

            </FrameLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/left_right_margin_size"
                android:background="@drawable/back_btn"
                android:text="Login"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/login_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="Ro'yxatdan o'tish"
                android:textColor="@color/cl_color_primary"
                android:textSize="@dimen/standard_text_size" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>