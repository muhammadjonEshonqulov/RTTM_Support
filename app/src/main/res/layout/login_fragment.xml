<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/very_large_text_size"
            android:orientation="vertical"
            android:padding="@dimen/left_right_margin_size">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/actionbar_size"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="80dp"
                app:cardElevation="@dimen/default_margin">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_auth_lay"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="@dimen/left_right_margin_size"
                app:endIconMode="clear_text"
                app:endIconTint="@color/default_text_color">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:fontFamily="@font/ibm_plex_sans_medium"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    tools:layout_editor_absoluteX="26dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_auth_lay"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/default_text_color"
                app:endIconTintMode="src_in">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Parol"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?selectableItemBackground"
                android:layout_marginTop="@dimen/default_margin"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:clickable="true"
                android:focusable="true"
                android:text="Parolni unutdingizmi?"
                android:textColor="@color/cl_color_primary"
                android:textSize="@dimen/standard_text_size" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/left_right_margin_size"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/left_right_margin_size">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_color_primary"
                    android:text="Kirish"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_registration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_weight="0.5"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="Ro'yxatdan o'tish"
                    android:textColor="@color/cl_color_primary"
                    android:textSize="@dimen/standard_text_size" />

                <TextView
                    android:id="@+id/login_help"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_weight="0.5"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="Yordam"
                    android:textColor="@color/cl_color_primary"
                    android:textSize="@dimen/standard_text_size" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>